<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="com.ukrainec.java.file.manager.Controller">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Выйти из программы" onAction="#btnExitActon"/>
        </Menu>
    </MenuBar>
    <HBox>
        <ComboBox />
        <TextField editable="false" HBox.hgrow="ALWAYS" />
        <Button text="Ввeрх" />
    </HBox>
    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS" />
    <HBox spacing="5">
        <Button maxWidth="Infinity" text="Копирование файл" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Перемещение файл" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Удалить файл" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Выход из программы" HBox.hgrow="ALWAYS" onAction="#btnExitActon"/>
      <padding>
         <Insets bottom="5.0" right="5.0" top="5.0" />
      </padding>

    </HBox>

</VBox>
